:css
  .block {
    margin-bottom: 100px;
    margin-top: 50px;
  }
.block
  %h2.text-center.col-sm-offset-4 Information about User
  %form{:action => "/get_json", :method => "POST"}
    .form-horizontal
      .form-group
        %label.col-sm-4.control-label Api key:
        .col-sm-8
          %input.form-control{:name => "api_key", :type => "string"}/
      .controls.col-sm-8.col-sm-offset-4
        %button.btn.btn-primary.btn-lg.btn-block{:type => "submit text-center"} Submit
%h2.text-center.col-sm-offset-4 Create new product
%form{:action => "/post_json", :method => "POST"}
  .form-horizontal
    .form-group
      %label.col-sm-4.control-label Api key:
      .col-sm-8
        %input.form-control{:name => "api_key", :type => "string"}/
    .form-group
      %label.col-sm-4.control-label Shop id:
      .col-sm-8
        %input.form-control{:name => "shop_id", :type => "string"}/
    .form-group
      %label.col-sm-4.control-label Shope code:
      .col-sm-8
        %input.form-control{:name => "shop_code", :type => "string"}/
    .form-group
      %label.col-sm-4.control-label Variant id:
      .col-sm-8
        %input.form-control{:name => "variant_id", :type => "string"}/
    .form-group
      %label.col-sm-4.control-label Name:
      .col-sm-8
        %input.form-control{:name => "name", :type => "string"}/
    .form-group
      %label.col-sm-4.control-label Price include tax:
      .col-sm-8
        %input.form-control{:name => "priceinctax", :type => "integer"}/
    %br/
    .form-group
      %label.col-sm-4.control-label Price without tax:
      .col-sm-8
        %input.form-control{:name => "stockstatus", :type => "string"}/
    .form-group
      %label.col-sm-4.control-label Picturelink:
      .col-sm-8
        %input.form-control{:name => "picturelink", :type => "string"}/
    .form-group
      %label.col-sm-4.control-label Deeplink:
      .col-sm-8
        %input.form-control{:name => "deeplink", :type => "string"}/
    .controls.col-sm-8.col-sm-offset-4
      %button.btn.btn-primary.btn-lg.btn-block{:type => "submit text-center"} Submit
